<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/itemID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:padding="8dp">


            <CheckBox
                android:id="@+id/check_boc_completed"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="301dp"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/check_boc_completed"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="7dp"
                android:layout_toStartOf="@+id/label_piority"
                android:layout_toEndOf="@+id/check_boc_completed"
                android:ellipsize="end"
                android:textStyle="bold"
                android:fontFamily="@font/averia_sans_libre_light"
                android:textColor="#385E7E"                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Task name"
                android:textSize="20dp" />

        <!--    <TextView
                android:id="@+id/tv_dueDate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/check_boc_completed"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="5dp"

                android:layout_toEndOf="@+id/check_boc_completed"
                android:ellipsize="end"
                android:fontFamily="@font/handlee"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="due date:"
                android:textColor="@color/black"
                android:textSize="15dp" />-->

            <TextView
                android:id="@+id/tvDueDateItem"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_view_name"
                android:layout_alignBottom="@+id/check_boc_completed"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="4dp"

                android:ellipsize="end"
                android:fontFamily="@font/boogaloo"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="DD/MM/YYYY:"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/label_piority"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:src="@drawable/ic_baseline_priority_high_24" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>