<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picgood"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/tv_title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:gravity="center"
        android:padding="40dp"
        android:text="Your Task Details"
        android:textColor="#9C6B5C"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="Task name "
        android:textColor="#43627C"
        android:textSize="25dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/tvTaskDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="No details "
        android:textSize="25dp" />
    <TextView
        android:id="@+id/tvTaskcomplation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="No details "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="No Due Date"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/tvCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="creation Date"
        android:textSize="25dp" />


    <Button
        android:id="@+id/updateButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="Update"
        android:textSize="17dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="Delete"
        android:textSize="17dp" />


</LinearLayout>

